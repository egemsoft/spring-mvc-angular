<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:security="http://www.springframework.org/schema/security"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <!-- HTTP basic authentication in Spring Security -->
    <http pattern="/auth/*" security="none"/>

    <http auto-config="true" create-session="always" access-denied-page="/auth/login#denied">

        <intercept-url pattern="/" access="ROLE_USER"/>

        <form-login
                login-page="/auth/login"
                login-processing-url="/j_spring_security_check"
                authentication-failure-url="/auth/login?fail"
                default-target-url="/"
                always-use-default-target="true"/>
        <logout logout-success-url="/auth/login?bye" logout-url="/j_spring_security_logout"/>
    </http>

    <security:authentication-manager alias="auth">
        <authentication-provider>
            <user-service>
                <user name="user" password="Passw0rd" authorities="ROLE_USER"/>
                <user name="admin" password="Passw0rd3" authorities="ROLE_USER, ROLE_ADMIN"/>
            </user-service>
        </authentication-provider>
    </security:authentication-manager>
</beans:beans>